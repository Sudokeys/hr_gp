<?xml version="1.0" encoding="UTF-8"?>
<openerp>
<data>
    <record model="ir.ui.view" id="table_form_view">
        <field name="name">hrgp_table.form</field>
        <field name="model">hr_gp.tablle</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Table form" version="7.0">
                <sheet>
                    <div>
                        <h1> Table de valeurs </h1>
                    </div>
                <newline/>
                <group>
                    <field name="name"/>
                </group>
                <group>
                    <field name="description"/>
                    <newline/>
                </group>
                <group col="4">
                    <field name="textable" colspan="4"/>
                    <field name="formated_tab" colspan="4"/>
                    <newline/>
                </group>
                <group col="4" colspan="4">
                    <field name="date_begin"/>
                    <field name="date_end"/>
                    <field name="active" />
                </group>
                <group col="6">
                    <field name="test_formule"/>
                    <button name="testformule" string="Test formule" type="object"/>
                    <field name="res_test"/>
                </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="table_tree_view">
        <field name="name">hrgp_table.tree</field>
        <field name="model">hr_gp.tablle</field>

        <field name="arch" type="xml">
            <tree string="Table tree form">
                <field name="name"/>
                <field name="description"/>
                <field name="date_begin"/>
                <field name="date_end"/>
                <field name="active"/>
            </tree>
        </field>
    </record>
    </data>
    </openerp>

