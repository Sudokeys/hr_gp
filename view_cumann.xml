<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>   
    <record model="ir.ui.view" id="cumann_tree_view">
        <field name="name">hrgp_cumann.tree</field>
        <field name="model">hr_gp.cumann</field>
        <field name="arch" type="xml">
            <tree string="Annual cumuls val tree">
                <field name="param_name"/>
                <field name="title"/>
                <field name="year_cum"/>
                <field name="cum_an"/>
                <field name="moan"/>
                <field name="last_update"/>
                <field name="company_key"/>
                <field name="activityframe_key"/>
                <field name="contractframe_key"/>
                <field name="employee_key"/>
            </tree>
        </field>
    </record>
    
    <record model="ir.ui.view" id="cumann_form_view">
        <field name="name">hrgp_cumann.form</field>
        <field name="model">hr_gp.cumann</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Annual cumuls form" version="7.0">
                <sheet>
                    <div>
                        <h1>Cumuls annuels</h1>
                    </div>
                <group col="4" colspan="4">
                    <field name="param_name"/>
                    <field name="title"/>
                    <field name="year_cum"/>
                </group>
                <separator colspan="4"/>
                <group>
                    <field name="cum_an" readonly="True"/>
                </group>
                <separator colspan="4"/>
                <newline/>
                <group col = "8" colspan="8">
                    <field name="mo1"/>
                    <field name="mo4"/>
                    <field name="mo7"/>
                    <field name="mo10"/>
                    <field name="mo2"/>
                    <field name="mo5"/>
                    <field name="mo8"/>
                    <field name="mo11"/>
                    <field name="mo3"/>
                    <field name="mo6"/>
                    <field name="mo9"/>
                    <field name="mo12"/>
                </group>
                <group>
                    <field name="moan"/>
                </group>
                <separator colspan="4"/>
                <group col = "6" colspan = "6">
                    <field name="last_update"/>
                    <newline/>
                    <field name="company_key"/>
                    <newline/>
                    <field name="activityframe_key"/>
                    <newline/>
                    <field name="contractframe_key"/>
                    <newline/>
                    <field name="employee_key"/>
                </group>
                </sheet>
            </form>
        </field>
    </record>
    </data>
</openerp>
