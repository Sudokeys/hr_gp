        <field name="name">hrgp_legal_frame.form</field>
        <field name="model">hr_gp.legal_frame</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Legal frame form" version="7.0">
                <sheet>
                    <div>
                        <h1>
